<Window x:Class="ServerHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Host" Height="350" Width="525">
    <Grid>

        <Label Height="25" Margin="75,92,0,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30" RenderTransformOrigin="1.216,0.494">IP:</Label>
        <Label Margin="11,0,0,153" Name="label2" HorizontalAlignment="Left" Width="89" Height="25" VerticalAlignment="Bottom">Listening Port:</Label>
        <TextBox x:Name="tbIP" Text="localhost" Height="25" Margin="105,92,122,0" VerticalAlignment="Top" />
        <TextBox x:Name="tbPort" Text="7997" Margin="105,0,122,153" Height="25" VerticalAlignment="Bottom" />
        <Button x:Name="btnStop" Click="buttonStop_Click" HorizontalAlignment="Right" Margin="0,181,208,0" Width="82" Height="25" VerticalAlignment="Top">Stop</Button>
        <Button x:Name="btnStart" Click="buttonStart_Click" Height="25" HorizontalAlignment="Right" Margin="0,181,312,0" VerticalAlignment="Top" Width="82">Start</Button>
        <Label x:Name="labelStatus" Margin="45,0,102,80" Height="25" VerticalAlignment="Bottom">Status</Label>
        <Label x:Name="labelTitle" FontSize="20" Height="40" Margin="25,33,42,0" VerticalAlignment="Top">Chat Service</Label>
    </Grid>
</Window>
